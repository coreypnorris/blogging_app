<div class='row'>
  <ol class='breadcrumb'>
    <li><%= link_to "Home", root_url %></li>
    <li class="active">Sign In</li>
  </ol>
</div>

<div class='row'>
  <h2>Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group"><%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true %></div>

    <div class='form-group'><%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %></div>

    <% if devise_mapping.rememberable? -%>
      <div class='form-group'><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in", :class => "btn btn-sm btn-default" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

