<%= render("layouts/errors", :object => @article) %>

<%= form_for @article, :html => { :class => "form-horizontal center", :role => "form" } do |f| %>
  <div class='form-group'>
    <%= f.label :name, "Article Name", :class => "col-sm-2 control-label" %>
    <div class='col-sm-10'>
      <%= f.text_field :name, :class => "form-control", :placeholder => "Article Name" %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :content, "Article Content", :class => "col-sm-2 control-label" %>
    <div class='col-sm-10'>
      <%= f.text_area :content, :class => "form-control", :placeholder => "Article Content" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit(:class => "btn btn-sm btn-default") %>
    <div>
  </div>
<% end %>

